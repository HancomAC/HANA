{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "lib": ["ES2021"],
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "plugins": [
            { "transform": "typescript-is/lib/transform-inline/transformer" }
        ]
    },
    "exclude": ["node_modules", "dist"]
}
