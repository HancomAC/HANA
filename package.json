{
    "name": "hana",
    "version": "1.0.0",
    "dependencies": {
        "body-parser": "^1.19.1",
        "express": "^4.17.2",
        "express-ws": "^5.0.2",
        "serve-favicon": "^2.5.0",
        "socket.io": "^4.4.0",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "build": "yarn run build:ts && yarn run build:docker",
        "build:ts": "tsc",
        "build:docker": "docker build -t jungol:HANA -- ./",
        "run": "node --es-module-specifier-resolution=node dist/index.js",
        "run:local": "yarn run build:ts && yarn run run",
        "run:docker": "yarn run build && docker run -p 80:80 -it jungol:HANA",
        "dev": "tsc-watch --onSuccess \"node --es-module-specifier-resolution=node dist/index.js\"",
        "prettier": "prettier --write ."
    },
    "devDependencies": {
        "@commitlint/cli": "^16.0.1",
        "@commitlint/config-conventional": "^16.0.0",
        "@types/express": "^4.17.13",
        "@types/express-ws": "^3.0.1",
        "@types/serve-favicon": "^2.5.3",
        "@types/uuid": "^8.3.3",
        "husky": "^7.0.4",
        "prettier": "2.5.1",
        "tsc": "^2.0.3",
        "tsc-watch": "^4.6.0",
        "typescript": "^4.5.4"
    }
}
